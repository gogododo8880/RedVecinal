<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:visibility="visible"
    app:cardBackgroundColor="@color/blanco_transparente">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_r_imagen_seccion"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo_redvecinal" />

        <TextView
            android:id="@+id/tv_r_seccion_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_r_imagen_seccion"
            android:layout_alignEnd="@+id/iv_r_imagen_seccion"
            android:layout_alignLeft="@+id/iv_r_imagen_seccion"
            android:layout_alignRight="@+id/iv_r_imagen_seccion"
            android:layout_alignStart="@+id/iv_r_imagen_seccion"
            android:background="@color/negro_transparente"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/blanco_transparente"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
